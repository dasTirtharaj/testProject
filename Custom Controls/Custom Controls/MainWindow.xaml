        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <userControls:MenuBar/>

        <userControls:TxtBoxes Grid.Row="1" />
        <userControls:TxtBoxes Grid.Row="2"/>
        <userControls:TxtBoxes Grid.Row="3"/>


    </Grid>
</Window>
